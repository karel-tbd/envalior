{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="py-10 w-1/2 flex justify-self-center rounded-2xl">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto w-full lg:py-0">
            <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 ">
                <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg"
                     alt="logo">
                Flowbite
            </a>
            <div class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 ">
                <div class="p-3 text-black">
                    <h1 class="text-2xl mb-5">Registeer</h1>

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                    <h2 class="text-2xl mb-5 font-extralight">Verplicht - Accountinformatie</h2>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.repeatPlainPassword) }}
                    <h2 class="text-2xl my-5 font-extralight">Verplicht - Persoonlijke informatie</h2>
                    {{ form_row(registrationForm.firstName) }}
                    {{ form_row(registrationForm.lastName) }}
                    {{ form_row(registrationForm.phoneNumber) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit"
                            class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                        Sign up
                    </button>
                    <p class="text-sm font-light text-gray-500 mt-5">
                        Go to login
                        <a href=""
                           class="font-medium text-primary-600 hover:underline">Sign in
                        </a>
                    </p>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
